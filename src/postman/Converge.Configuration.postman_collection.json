{
  "info": {
    "_postman_id": "b9d3a5e6-8c6e-4f5f-9f2e-1a2b3c4d5e6f",
    "name": "Converge Configuration API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "correlationId",
      "value": "corr-1",
      "type": "string"
    },
    {
      "key": "tenantId",
      "value": "",
      "type": "string"
    },
    {
      "key": "version",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Config",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Correlation-ID",
            "value": "{{correlationId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"site:title\",\n  \"value\": \"My Site\",\n  \"scope\": \"Global\",\n  \"tenantId\": null\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/config",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "config"
          ]
        }
      }
    },
    {
      "name": "Get Effective Config",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Correlation-ID",
            "value": "{{correlationId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/config/site:title?tenantId={{tenantId}}&version={{version}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "config",
            "site:title"
          ],
          "query": [
            {
              "key": "tenantId",
              "value": "{{tenantId}}"
            },
            {
              "key": "version",
              "value": "{{version}}"
            }
          ]
        }
      }
    },
    {
      "name": "Update Config",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Correlation-ID",
            "value": "{{correlationId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"value\": \"My New Site\",\n  \"expectedVersion\": 1\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/config/site:title",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "config",
            "site:title"
          ]
        }
      }
    },
    {
      "name": "Rollback Config",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Correlation-ID",
            "value": "{{correlationId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"version\": 1,\n  \"tenantId\": null\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/config/site:title/rollback",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "config",
            "site:title",
            "rollback"
          ]
        }
      }
    }
  ]
}
