{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Persistence": {
    "UsePostgres": true,
    "ApplyMigrationsOnStartup": true,
    "PostgresConnection": "${POSTGRES_CONNECTION_STRING}"
  },
  "ConnectionStrings": {
    "Postgres": "${POSTGRES_CONNECTION_STRING}"
  },
  "Kafka": {
    "Topic": "config-events"
  },
  "Caching": { "Enabled": false }
}